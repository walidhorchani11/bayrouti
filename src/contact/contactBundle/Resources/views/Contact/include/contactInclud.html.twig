<div class="row">
    <div class="col-12 col-sm-6 mb-5">
        <h3 class="font-italic text-danger" style="margin-bottom: 25px">Coordonees</h3>
        <ul class="list-unstyled">
            <li id="adresse"><i class="fa fa-fw fa-map"></i>
                <a data-toggle="modal" data-target="#modal-adresse">Adresse: {{ adresse }}</a></li>
            <li><i class="fa fa-fw fa-phone"></i> Tel: {{ tel }}</li>
            <li><i class="fa fa-fw fa-envelope"></i> Email: {{ Email }}</li>
            <li><i class="fa fa-fw fa-facebook-square"></i> Facebook: {{ fb }}</li>
        </ul>
    </div>
    <div class="col-12 col-sm-6">
        <h3 class="font-italic text-primary">Votre message</h3>

        {{ form_start(form, {'action': path('contact_homepage')  }) }}
        <div class="form-group">
            {{ form_row(form.client) }}
        </div>
        <div class="form-group">
            {{ form_row(form.reclamation) }}
        </div>
        <div class="form-group">
            {{ form_row(form.envoyer) }}
        </div>
        {{ form_end(form) }}
    </div>
</div>
