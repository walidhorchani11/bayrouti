
<div class="container">
    <div class="text-center mb-5">
        <h2>Nos produits</h2>
        <p class="m-0">Lorem ipsum dolor sit amet, consectetur adipiscing elit.
            Aliquam nulla eros, lobortis a ipsum a, auctor pellentesque leo.
            Nulla facilisi. Vestibulum gravida aliquet nulla, sed iaculis nisi.
        </p>
    </div>
    <div class="row">
        {% for product in products %}
            <div class="col-12 col-sm-6 col-md-3 mb-3 mb-sm-0">
                <div class="card">
                    <div class="card-header pb-1 p-0">
                        <img class="img-fluid" src="{{ ('uploads/brochures/'~product.image)|imagine_filter('my_thumb') }}" alt="{{ product.name }}" >
                    </div>
                    <div class="card-body">
                        <h3 class="text-capitalize">{{ product.name }}</h3>
                        {% set x = random(1,999889) %}
                        {% set back = 'badge-primary' %}
                        {% if x % 3 == 0 %}
                            {% set back = 'badge-danger' %}
                        {% elseif x % 3 == 1 %}
                            {% set back = 'badge-warning' %}
                        {% endif %}
                        <p class="text-right m-0"><span class="badge {{ back }}">{{ product.price }} DT</span></p>
                    </div>
                </div>
            </div>
        {% endfor %}
        <div class="col-12 text-center">
            <p><a class="btn btn-success" href="{{ path('product_index') }}" style="text-decoration: none">Nos produits</a></p>
        </div>
    </div>
</div>
